<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="WaveRefreshLayout">
        <attr name="wr_topImageHeight" format="dimension" />
        <attr name="wr_bgColor" format="color" />
        <attr name="wr_angle" format="integer"/>
        <attr name="wr_gravity" format="enum" >
            <enum name="left" value="0" />
            <enum name="right" value="1" />
        </attr>
        <attr name="wr_waveAmplitude" format="dimension" />
        <attr name="wr_speed" format="integer" />
    </declare-styleable>
</resources>
